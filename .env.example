# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=27017
DB_NAME=lumimei_os
DB_USER=
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# AI Models Configuration
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_API_KEY=

# Local AI Models Path
LOCAL_MODELS_PATH=./ai-core/models

# Speech Configuration
TTS_ENGINE=local
STT_ENGINE=local

# Logging
LOG_LEVEL=info
LOG_FILE=logs/lumimei.log

# Device Integration
ALLOW_DEVICE_CONTROL=true
DEVICE_DISCOVERY_TIMEOUT=30000

# Privacy Settings
DATA_RETENTION_DAYS=365
ENABLE_CLOUD_SYNC=false
ENABLE_TELEMETRY=false
