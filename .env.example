# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/meimi
DATABASE_NAME=meimi
DB_HOST=localhost
DB_PORT=27017
DB_NAME=lumimei_os
DB_USER=
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth設定
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Google Calendar API
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key

# AI Models Configuration
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_API_KEY=

# Local AI Models Path
LOCAL_MODELS_PATH=./ai-core/models

# 音声認識 (STT) サービス設定
STT_PROVIDER=external
STT_API_URL=https://api.openai.com/v1/audio/transcriptions
STT_API_KEY=your-stt-api-key
WHISPER_MODEL_PATH=/path/to/whisper/model
STT_ENGINE=local

# 音声合成 (TTS) サービス設定
TTS_PROVIDER=external
TTS_API_URL=https://api.elevenlabs.io/v1/text-to-speech
TTS_API_KEY=your-tts-api-key
TTS_VOICE_ID=default-voice-id
ESPEAK_PATH=/usr/bin/espeak
TTS_ENGINE=local

# 画像認識・OCRサービス設定
VISION_PROVIDER=lmstudio
VISION_API_URL=http://localhost:1234/v1/chat/completions
VISION_API_KEY=your-vision-api-key
VISION_MODEL=llava-v1.6-vicuna-7b-q4

# OCRサービス設定
OCR_PROVIDER=external
OCR_API_URL=https://vision.googleapis.com/v1/images:annotate
OCR_API_KEY=your-google-vision-api-key

# LMStudio設定
LMSTUDIO_API_URL=http://localhost:1234/v1/chat/completions
LMSTUDIO_MODEL=your-lmstudio-model-name

# デバイス制御設定
DEVICE_CONTROL_ENABLED=true
PHONE_CONTROL_API_URL=http://localhost:8080/phone
LINE_API_URL=https://api.line.me/v2/bot/message/push
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
ALLOW_DEVICE_CONTROL=true
DEVICE_DISCOVERY_TIMEOUT=30000

# ウェイクワード検出設定
WAKE_WORD_ENABLED=true
WAKE_WORD_MODEL_PATH=/path/to/wake-word-model
WAKE_WORD_THRESHOLD=0.8

# Logging
LOG_LEVEL=info
LOG_FILE=logs/lumimei.log

# Privacy Settings
DATA_RETENTION_DAYS=365
ENABLE_CLOUD_SYNC=false
ENABLE_TELEMETRY=false

# CORS設定
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ファイルアップロード設定
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# 外部API設定
EXTERNAL_API_TIMEOUT=10000
EXTERNAL_API_RETRIES=3

# セキュリティ設定
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
