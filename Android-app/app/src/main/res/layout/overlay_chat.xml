<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/overlay_background"
    android:elevation="8dp">

    <!-- Drag Handle and Toggle Button -->
    <LinearLayout
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/primary"
        android:padding="8dp">

        <Button
            android:id="@+id/button_toggle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:text="💬"
            android:textSize="18sp"
            android:background="@drawable/circle_button"
            android:minWidth="0dp"
            android:minHeight="0dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LumiMei"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/button_minimize"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_minimize"
            android:background="@drawable/circle_button_transparent"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/button_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="@drawable/circle_button_transparent"
            android:tint="@android:color/white" />

    </LinearLayout>

    <!-- Chat Layout (expandable) -->
    <LinearLayout
        android:id="@+id/chat_layout"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:visibility="gone">

        <!-- Chat History -->
        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp">

            <TextView
                android:id="@+id/text_chat_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:hint="メッセージを入力してください..." />

        </ScrollView>

        <!-- Message Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@color/background">

            <EditText
                android:id="@+id/edit_text_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="メッセージを入力..."
                android:textSize="14sp"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:maxLines="3"
                android:inputType="textMultiLine|textCapSentences" />

            <ImageButton
                android:id="@+id/button_send"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_send"
                android:background="@drawable/circle_button"
                android:backgroundTint="@color/primary"
                android:tint="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
