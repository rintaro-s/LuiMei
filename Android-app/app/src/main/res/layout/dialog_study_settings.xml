<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Default Duration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="デフォルト学習時間"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_default_duration_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="60分"
            android:textSize="14sp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_default_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:valueFrom="15"
            android:valueTo="180"
            android:value="60"
            android:stepSize="15" />

        <!-- Break Interval -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="休憩間隔"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_break_interval_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="25分"
            android:textSize="14sp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_break_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:valueFrom="10"
            android:valueTo="60"
            android:value="25"
            android:stepSize="5" />

        <!-- Break Duration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="休憩時間"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_break_duration_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="5分"
            android:textSize="14sp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_break_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:valueFrom="5"
            android:valueTo="30"
            android:value="5"
            android:stepSize="5" />

        <!-- Notifications -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="学習通知"
            android:textSize="16sp" />

        <!-- Auto Break -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_auto_break"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="自動休憩"
            android:textSize="16sp" />

        <!-- Pomodoro Mode -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_pomodoro_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="ポモドーロテクニック"
            android:textSize="16sp" />

        <!-- Focus Mode -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_focus_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="集中モード（通知ブロック）"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
