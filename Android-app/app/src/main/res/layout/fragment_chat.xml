<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- Chat Messages RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewChat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_constraintBottom_toTopOf="@+id/input_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Input Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/input_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Text Input -->
            <EditText
                android:id="@+id/editTextMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="メッセージを入力..."
                android:background="@null"
                android:maxLines="3"
                android:textSize="16sp"
                android:layout_marginEnd="12dp" />

            <!-- Send Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_send"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/primary_color">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_send"
                    android:tint="@color/white" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Central Voice Button (Push-to-Talk) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_voice_main"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/primary_color"
        app:layout_constraintBottom_toTopOf="@+id/input_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/iv_voice_main"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_mic"
            android:tint="@color/white" />

    </androidx.cardview.widget.CardView>

    <!-- Voice Status Text -->
    <TextView
        android:id="@+id/tv_voice_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="長押しで音声入力"
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btn_voice_main"
        app:layout_constraintEnd_toEndOf="@+id/btn_voice_main"
        app:layout_constraintStart_toStartOf="@+id/btn_voice_main"
        android:layout_marginBottom="8dp" />

    <!-- TTS Toggle Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_tts"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/secondary_color"
        app:layout_constraintBottom_toBottomOf="@+id/btn_voice_main"
        app:layout_constraintEnd_toStartOf="@+id/btn_voice_main"
        app:layout_constraintTop_toTopOf="@+id/btn_voice_main"
        android:layout_marginEnd="24dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_volume_up"
            android:tint="@color/white" />

    </androidx.cardview.widget.CardView>

    <!-- Voice Character Selection Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_voice_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/secondary_color"
        app:layout_constraintBottom_toBottomOf="@+id/btn_voice_main"
        app:layout_constraintStart_toEndOf="@+id/btn_voice_main"
        app:layout_constraintTop_toTopOf="@+id/btn_voice_main"
        android:layout_marginStart="24dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_settings"
            android:tint="@color/white" />

    </androidx.cardview.widget.CardView>

    <!-- Recording Animation Overlay -->
    <androidx.cardview.widget.CardView
        android:id="@+id/voice_recording_overlay"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:visibility="gone"
        app:cardCornerRadius="60dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@color/error_color"
        app:layout_constraintBottom_toBottomOf="@+id/btn_voice_main"
        app:layout_constraintEnd_toEndOf="@+id/btn_voice_main"
        app:layout_constraintStart_toStartOf="@+id/btn_voice_main"
        app:layout_constraintTop_toTopOf="@+id/btn_voice_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_voice_recording"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_mic"
                android:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="録音中..."
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
